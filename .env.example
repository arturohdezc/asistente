# Telegram Bot Configuration
TELEGRAM_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_token

# Gmail Configuration (JSON string with account credentials)
GMAIL_ACCOUNTS_JSON={"accounts": [{"email": "user@gmail.com", "credentials": "..."}]}

# Google Calendar Configuration (JSON string with credentials)
CALENDAR_CREDENTIALS_JSON={"type": "service_account", "project_id": "..."}

# Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Cron Job Token for daily summary
CRON_TOKEN=your_secure_cron_token

# Database Configuration (Replit paths)
DATABASE_URL=sqlite+aiosqlite:///home/runner/db.sqlite3

# Backup Configuration (Replit paths)
BACKUP_RETENTION_DAYS=7
BACKUP_DIRECTORY=/home/runner/backups

# Application Limits
MAX_TASKS_LIMIT=10000

# Development Settings
DEBUG=true
LOG_LEVEL=INFO